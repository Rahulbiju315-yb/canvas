import javax.swing.*;
import java.awt.event.*;
public class SquareProp extends JPanel
{
    JCheckBox sb = new JCheckBox();
    JCheckBox pb = new JCheckBox();
    public SquareProp()
    {
        sb.addActionListener(new ActionListener()
        {
            public void actionPerformed(ActionEvent e)
            {
                if(sb.isSelected())Properties.SquareProp.selected = Properties.SquareProp.SPEED_BASED;
                else Properties.SquareProp.selected = Properties.SquareProp.POSITION_BASED;
            }
        });
        
        add(sb);
        add(pb);
    }
    
    public int getSelected()
    {
        if(sb.isSelected()) return 1;
        else return 2;
    }
}
